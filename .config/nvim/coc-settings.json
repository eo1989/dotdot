  "git.enableGutters": true,
  "git.semanticCommit.scope": true,
  "git.addGBlameToVirtualText": true,
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutter Delete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "vimlsp.debug": true,
  "vimlsp.indexes.count": 99,
  "vimlsp.indexes.gap": 50,
  "vimlsp.diagnostic.enable": true,
  "vimlsp.suggest.fromVimruntime": true,
  "vimlsp.suggest.fromRuntimepath": true,
  "suggest.completionItemKindLabels": {
    "keyword":       "\uf1de",
    "variable":      "\ue79b",
    "value":         "\uf89f",
    "operator":      "\u03a8",
    "function":      "\u0192",
