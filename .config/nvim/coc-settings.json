  "suggest.enablePreview": true,
  "suggest.autoTrigger": "always",
  "suggest.preferCompleteThanJumpPlaceholder": false,
  "suggest.floatEnable": true,
  "suggest.detailField": "preview",
  "codeLens.enable": true,
  "list.matchHighlightGroup": "Search",
  "signature.enable": true,
  "signature.hideOnTextChange": true,
  "signature.target": "float",
  "coc.preferences.hoverTarget": "float",
  "coc.preferences.formatOnType": false,
  "coc.preferences.enableFloatHighlight": true,
  "coc.preferences.colorSupport": true,
  "coc.preferences.rootPatterns": [".git", ".vscode"],
  "coc.preferences.jumpCommand": "drop",
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.enableMarkdown": true,
  "coc.source.file.ignoreHidden": false,
  "coc.preferences.bracketEnterImprove": true,
  "Lua.hover.enable": true,

  "json.schemaDownload.enable": true,
  "json.enable": true,
  "json.format.enable": true,
  "julia.enabled": true,
  "go.enable": true,
  "lua.enable": true,
  "sh.enable": true,
  "diagnostic.messageTarget": "float",
  "diagnostic.virtualText": true,
  "diagnostic.enableHighlightLineNumber": true,
