  "jedi.executable.command": "jedi-language-server",
  "jedi.markupKindPreferred": "markdown",
  "jedi.startupMessage": true,
  "jedi.diagnostics.enable": true,
  "jedi.diagnostics.didOpen": false,
  "jedi.diagnostics.didSave": true,
  // "jedi.diagnostics.didChange": false,
  "jedi.jediSettings.autoImportModules": ["scipy", "numpy", "matplotlib", "pandas", "sklearn", "requests", "beautifulsoup4", "scikit-learn", "sympy", "h5py", "bokeh", "bqplot", "seaborn", "altair", "dask", "asyncio", "os", "sys"],
  "python.poetryPath": "poetry",
  "python.analysis.diagnosticEnabled": true,
  "python.autoComplete.addBrackets": true,
  "python.linting.enabled": false,
  "python.linting.mypyEnabled": false,
  "python.linting.flake8Enabled": false,
  "python.linting.flake8Args": [
    "--ignore=E501,E402,F481,F841,F401,E999,E251,E302,E305,E265,E201,YCM112,YCM201,YCM202,",
    "--config='~/.flake8'"
  ],
  "python.linting.pylintEnabled": false,
  "python.linting.pylintArgs": [
    "--rcfile",
    "~/pylintrc",
    "--ignore=D205,D100,D102,D105,D106,D107,E501,C0326,C0303,C0325,C0102"
  ],
  "python.formatting.provider": "black",
  "python.jediEnabled": false,
  "python.autoUpdateLanguageServer": false,
  "julia.environmentPath": "~/.julia/environments/v1.5",
  "julia.executablePath": "/Applications/Julia-1.5.app/Contents/Resources/julia/bin/julia",
  "julia.lint.run": true,
  "julia.format.kw": false,
  "julia.lint.iter": true,
  "julia.lint.lazy": true,
  "julia.format.indent": 4,
  "julia.format.ops": false,
  "julia.lint.call": true,
  "julia.format.curly": true,
  "julia.lint.missingrefs": true,
  "julia.format.docs": true,
  "julia.format.comments": true,
  "julia.format.calls": true,
  "julia.lint.constif": true,
  "julia.lint.modname": true,
  "julia.lint.pirates": true,
  "julia.format.tuples": true,
  "julia.format.indents": true,
  "julia.format.iterOps": true,
  "julia.lint.typeparam": true,
  "julia.trace.server": "verbose",
  "pyright.disableCompletion": false,
  "pyright.disableLanguageServices": false,
  "pyright.disableOrganizeImports": false,
  "pyright.completion.snippetSupport": true,
  "markdownlint.config": {
    "default": true,
    "line-length": false
  },
  "sh.highlightParsingErrors": true,
  "sh.explainshellEndpoint": "http://localhost:5000",
  "sh.trace.server": "verbose",
  "yaml.completion": true,
  "yaml.hover": true,

  "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~/Dev/goProj", "~/Dev/pyProj", "~/Dev/Data"]
        },
        "Haskell": {
            "command": "~/.local/bin/haskell-language-server-wrapper",
            "args": ["lsp"],
            "rootPatterns": [
                "*.cabal",
                "stack.yaml",
                "cabal.project",
                "package.yaml",
                "hie.yaml",
                "*.hs"
            ],
            "filetypes": ["haskell", "lhaskell"]
        },
        "julia": {
            "filetypes": ["julia", "jl", "git", "ipynb", "jmd"],
            "command": "julia"
            // "server":,
            // "args": [ "--startup-file='~/.julia/config/startup.jl'", "--history-file=no", "-e",
            //       [["using Pkg", "Pkg.instantiate(); using LanguageServer; Using SymbolServer; depot_path = get(ENV, 'JULIA_DEPOT_PATH',""); project_path = dirname]]]
        }
