local nvimux = require('nvimux')


-- Nvimux config
nvimux.config.set_all{
  prefix = '<C-a>',
  new_window = 'enew', --use 'term' if u want to open a new term for every new window
  new_tab = nil, --defaults to new_window. set to term if u want new term for every new tab
  new_window_buffer = 'single',
  quickterm_direction = 'botright',
  quickterm_orientation = 'vertical',
  quickterm_scope = 't', --use 'g' for global quickterm
  quickterm_size = '80',
}

-- Nvimux custom bindings
nvimux.bindings.bind_all{
  {'s', ':NvimuxHorizontalSplit', {'n', 'v', 'i', 't'}},
  {'v', ':NvimuxVerticalSplit', {'n', 'v', 'i', 't'}},
}

-- required so nvimux sets the mappings correctly
nvimux.bootstrap()
