#!/usr/bin/env zsh
##############################################################################
# description:
# Calculate percentage increase between "from" and "to" and add to clipboard
##############################################################################

GROWTH=$(echo "($2 / $1 - 1) * 100" | bc -l)
GROWTH=$(printf "%.1f" $GROWTH)
echo "$GROWTH" | pbcopy
echo "Growth from $1 to $2 is $GROWTH%. Copied to clipboard."
